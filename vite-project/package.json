{
  "name": "vite-project",
  "private": true,
  "jest": {
    "verbose": true
  },
  "version": "0.0.0",
  "scripts": {
    "dev:server": "ts-node server.ts",
    "dev:client": "npm run build:client && vite --config vite.config.ts dev",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist && copyfiles -f dist/client/assets/* dist/assets",
    "preview": "vite preview",
    "test": "vitest",
    "test:cypress": "start-server-and-test http://localhost:7456 cypress",
    "cypress": "cypress open",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint \"src/**/*.{js,jsx,tsx}\" --fix",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "axios": "^1.3.6",
    "compression": "^1.7.4",
    "copyfiles": "^2.4.1",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "listhen": "^1.0.4",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-icons": "^4.8.0",
    "react-modal": "^3.16.1",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.4.1",
    "sirv": "^2.0.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-modal": "^3.13.1",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.4",
    "c8": "^7.13.0",
    "cypress": "^12.11.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "jsdom": "^21.1.1",
    "start-server-and-test": "^2.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vitest": "^0.29.3"
  }
}
